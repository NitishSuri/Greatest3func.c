# Greatest3func.c
33rd program on c
#include<stdio.h>

int greatest(int,int,int);
int smallest(int,int,int);
int main()
{
int a,b,c,g,s;
printf("Enter 1st number \n");
scanf("%d",&a);

printf("Enter the second number \n");
scanf("%d",&b);

printf("Enter the third number \n");
scanf("%d",&c);

greatest(a,b,c);
smallest(a,b,c);

g=greatest(a,b,c);
s=smallest(a,b,c);

printf("the greatest no is %d",g);
printf("the smallest no is %d",s);

return 0;

}
int greatest(int a,int b,int c)
{
  
if(a>b&&a>c)
{
  return a;
 }
  
  else if(b>a&&b>c)
        { 
          return b;
         }
  else 
      {
        return c;
       }
}
int smallest(int a,int b,int c)
{
 
if(a<b&&a<c)
{
 return a;
 }
  
  else if(b<a&&b<c)
        { 
          return b;
         }
  else 
      {

        return c;
       }
}
